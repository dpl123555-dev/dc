msg=[1 0 1 0 1 1 1 0];

length=3;
generator=[7 5];

trellis=poly2trellis(length,generator);

encoded_msg=convenc(msg,trellis);

encoded_msg_noisy=encoded_msg;
encoded_msg_noisy(4)=~encoded_msg_noisy(4);

traceback=5;
decoded_msg=vitdec(encoded_msg_noisy,trellis,traceback,'trunc','hard');

disp(msg)
disp(encoded_msg);
disp(encoded_msg_noisy);
disp(decoded_msg);
